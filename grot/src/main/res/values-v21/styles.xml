<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GrotTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="GrotTheme.Light" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@color/light_primary_dark</item>
        <item name="android:colorAccent">@color/light_accent</item>
        <item name="android:navigationBarColor">@color/light_primary_dark</item>
    </style>

    <style name="GrotTheme.STX" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/stx_main_color</item>
        <item name="android:colorPrimaryDark">@color/stx_secondary_color</item>
        <item name="android:colorAccent">@color/stx_accent</item>
        <item name="android:navigationBarColor">@color/stx_secondary_color</item>
    </style>

</resources>